##1 SS
def find_splice(dna_motif, dna):
    
    mylist = []
    n = len(dna_motif)
    f = 0
    for j in range(len(dna)):        
        if dna[j] == dna_motif[f]:
            mylist.append( j )
            f += 1
            if f >=n:
                return mylist
