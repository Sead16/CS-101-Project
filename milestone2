#3 MJ
def get_edges(dict):
    key_list = dict.keys()
    list=[]
    for i in key_list:
        list.append(i)
    result=[]
    for i in range(0,len(list)):
        for j in range(i+1,len(list)):
            if(dict[list[i]][:3]==dict[list[j]][-3:] or dict[list[i]][-3:]==dict[list[j]][:3]):
                result.append((list[i],list[j]))
    return result
    
