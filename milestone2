#5 MJ
def perfect_match(rna):
    def fact(n):
        if n==1 or n==0:
            return 1
        return n*fact(n-1)
    [a,u,c,g]=[0,0,0,0]
    for geneome in rna:
        if geneome.lower() == 'a':
            a+=1
        if geneome.lower() == 'u':
            u+=1
        if geneome.lower() == 'c':
            c+=1
        if geneome.lower() == 'g':
            g+=1
    if a==u and c==g:
        return fact(a)*fact(c)
    return 0

